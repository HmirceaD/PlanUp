<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <GridLayout
        android:id="@+id/colors_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <ImageButton
            android:id="@+id/darkBlueButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_column="0"
            android:layout_row="0"
            android:background="#FFF"
            android:padding="3dp"
            android:src="@color/darkBlue" />

        <ImageButton
            android:id="@+id/lightBlueButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_row="0"

            android:background="#FFF"
            android:padding="3dp"
            android:src="@color/lightBlue" />

        <ImageButton
            android:id="@+id/mauveButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_column="2"
            android:layout_row="0"

            android:background="#FFF"
            android:padding="3dp"
            android:src="@color/mauve" />

        <ImageButton
            android:id="@+id/redButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_column="0"
            android:layout_row="1"

            android:background="#FFF"
            android:padding="3dp"
            android:src="@color/red" />

        <ImageButton
            android:id="@+id/orangeButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_row="1"

            android:background="#FFF"
            android:padding="3dp"
            android:src="@color/orange" />

        <ImageButton
            android:id="@+id/lavenderButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_column="2"
            android:layout_row="1"

            android:background="#FFF"
            android:padding="3dp"
            android:src="@color/lavender" />

        <ImageButton
            android:id="@+id/purpleButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_column="0"
            android:layout_row="2"

            android:background="#FFF"
            android:padding="3dp"
            android:src="@color/purple" />

        <ImageButton
            android:id="@+id/aquaButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_row="2"

            android:background="#FFF"
            android:padding="3dp"
            android:src="@color/aqua" />

        <ImageButton
            android:id="@+id/greenButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_column="2"
            android:layout_row="2"

            android:background="#FFF"
            android:padding="3dp"
            android:src="@color/green" />

        <ImageButton
            android:id="@+id/mustardButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_column="0"
            android:layout_row="3"

            android:background="#FFF"
            android:padding="3dp"
            android:src="@color/mustard" />

        <ImageButton
            android:id="@+id/darkGrayButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_row="3"

            android:background="#FFF"
            android:padding="3dp"
            android:src="@color/darkGray" />

        <ImageButton
            android:id="@+id/pinkButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_column="2"
            android:layout_row="3"

            android:background="#FFF"
            android:padding="3dp"
            android:src="@color/pink" />

        <ImageButton
            android:id="@+id/lightGrayButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_column="0"
            android:layout_row="4"

            android:background="#FFF"
            android:padding="3dp"
            android:src="@color/lightGray" />



    </GridLayout>
</RelativeLayout>